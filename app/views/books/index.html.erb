<div class="container">
  <div class="raw">
    <div class="col-md-3">
      <div class="User info">
        <h2>User info</h2>

        <table class="table">
          <tbody>
            <tr>
              <th>name</th>
              <th></th>
            </tr>
            <tr>
              <th>introduction</th>
              <th></th>
            </tr>
          </tbody>
        </table>
        <a class="btn"></a>
      </div>
      <div class="New book">
        <h2>New book</h2>
        <%= form_with model: @book do |f| %>
          <div class="form-group">
            <label>Title</label>
            <%= f.text_field :title %>
          </div>
          <div class="form-group">
            <label>Opinion</label>  
            <%= f.text_area :body %>
          </div>
          <div class="form-group">
            <%= f.submit 'Create book' %>
          </div>
        <% end %>
      </div>
    </div>
    <div class="col-md-9">
      <h2>Books</h2>
      <table class="table">
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
          </tr>
        </thead>
        <tbody>
          <% @books.each do |book| %>
          <tr>
            <td></td>
            <td><%= link_to book.title, book_path(book.id) %></td>
            <td><%= book.body %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>