<div class="container">
  <div class="raw">
    <div class="col-md-3">
      <%= render 'list', user: @user %>
            <div class="New book">
        <h2>New book</h2>
        <%= form_with model: @book do |f| %>
          <div class="form-group">
            <label>Title</label><br>
            <%= f.text_field :title %>
          </div>
          <div class="form-group">
            <label>Opinion</label><br>
            <%= f.text_area :body %>
          </div>
          <div class="form-group">
            <%= f.submit 'Create book' %>
          </div>
        <% end %>
      </div>
    </div>
    <div class="col-md-9">
      <h2>Book detail</h2>
      <table class="table">
        <tbody>
          <td>
            <%= link_to user_path(@book.user) do %>
            <%= image_tag @book.user.get_profile_image(100,100) %><br>
            <%= @user.name %>
            <% end %>
          </td>
          <td><%= @book.title %></td>
          <td><%= @book.body %></td> 
        </tbody>
      </table>
    </div>
  </div>
</div>






