<div class="container">
  <div class="row">
    <div class="col">
      <h1>User info</h1>

      <% if @user.errors.any? %>
        <%= @user.errors.count %> error
        <ul>
          <% @user.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      <% end %>

      <%= form_with model: @user do |f| %>
        <label>Name</label><br>
        <%= f.text_field :name %><br><br>
        <label>Image</label><br>
        <%= f.file_field :profile_image, accept: "image/*" %><br><br>
        <label>Introduction</label><br>
        <%= f.text_area :introduction %><br>
        <%= f.submit 'Update User' %>
      <% end %>
    </div>
  </div>
</div>





