<div class="container">
  <div class="raw">
    <div class="col-md-3">
      <%= render 'books/list', user: @user %>
      <div class="New book">
        <h2>New book</h2>
        <%= form_with model: @book do |f| %>
          <div class="form-group">
            <label>Title</label><br>
            <%= f.text_field :title %>
          </div>
          <div class="form-group">
            <label>Opinion</label><br>
            <%= f.text_area :body %>
          </div>
          <div class="form-group">
            <%= f.submit 'Create book' %>
          </div>
        <% end %>
      </div>
    </div>
    <div class="col-md-9">
      <h2>Users</h2>
      <table class="table">
        <thead>
          <tr>
            <th>image</th>
            <th>name</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @users.each do |user| %>
            <tr>
              <td><%= image_tag user.get_profile_image(100,100) %></td>
              <td><%= user.name %></td>
              <td><%= link_to "show", user_path(user) %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>


